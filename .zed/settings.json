{
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "formatter": "ruff",
      "format_on_save": true,
      "tab_size": 4,
      "hard_tabs": false
    },
    "TOML": {
      "tab_size": 2,
      "hard_tabs": false
    },
    "Markdown": {
      "tab_size": 2,
      "hard_tabs": false,
      "wrap_guides": [80]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "analysis": {
            "typeCheckingMode": "strict",
            "autoSearchPaths": true,
            "useLibraryCodeForTypes": true,
            "diagnosticMode": "workspace"
          }
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 88,
          "select": ["E", "W", "F", "I", "B", "C4", "UP", "S"],
          "ignore": ["E501", "B008", "C901", "S101"],
          "per-file-ignores": {
            "tests/*": ["S101"]
          }
        }
      }
    }
  },
  "project_panel": {
    "dock": "left",
    "default_width": 300
  },
  "terminal": {
    "shell": "zsh",
    "working_directory": "current_project_directory"
  },
  "vim_mode": false,
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "YAML": ["*.yml", "*.yaml", ".github/workflows/*"],
    "TOML": ["*.toml", "pyproject.toml", "Cargo.toml"]
  },
  "show_whitespaces": "selection",
  "show_wrap_guides": true,
  "wrap_guides": [88],
  "preferred_line_length": 88,
  "soft_wrap": "preferred_line_length",
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "auto"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  }
}