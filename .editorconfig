root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{toml,yml,yaml}]
indent_size = 2

[*.{md,rst}]
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.{html,xml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2

[*.bat]
indent_style = tab

[*.{cfg,ini}]
indent_size = 4

[.gitignore]
indent_size = 2